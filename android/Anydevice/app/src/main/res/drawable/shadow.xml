<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#04000000"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>

    <item
        android:top=".5dp"
        android:bottom="1dp"
        android:left=".5dp"
        android:right=".5dp">
        <shape android:shape="rectangle">
            <solid android:color="#12000000"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>

    <item
        android:top=".5dp"
        android:bottom="2dp"
        android:left="1dp"
        android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/device_background"/>
            <corners android:radius="1dp"/>
        </shape>
    </item>
</layer-list>